import matplotlib.pyplot as plt
import numpy as np

def draw_linear_plot():
    xvalues = np.linspace(0,20,20)
    yvalues = 2*xvalues + 10
    
    plt.plot(xvalues, yvalues, label='Linear Plot', color='cyan', linestyle='-', marker='o')


    plt.xlabel ('X-axis')
    plt.ylabel ('Y-axis')
    plt.title( 'Linear Plot Example')

    plt.legend()
    plt.show()

if __name__ == "__main__":
    draw_linear_plot()
