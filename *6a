import matplotlib.pyplot as plt
import numpy as np

def linear_plot():
    # Generate sample data
    x_values = np.linspace(0, 20, 20)  # 20 points from 0 to 10
    y_values = 3 * x_values + 2  # Linear equation: y = 3x + 2

    # Create a linear plot
    plt.plot(x_values, y_values, label='Linear Plot', color='blue', linestyle='-', marker='o')

    # Add labels and title
    plt.xlabel('X-axis')
    plt.ylabel('Y-axis')
    plt.title('Linear Plot Example')

    # Add a legend
    plt.legend()

    # Show the plot
    plt.show()

if __name__ == "__main__":
    # Call the function to create the linear plot
    linear_plot()
